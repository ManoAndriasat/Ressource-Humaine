

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="~/css/needs.css" />
    <link rel="stylesheet" href="~/css/Conge.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <title>Document</title>
    </head>
   

    <body style="background-color: rgb(244, 244, 244);">
        <div class="container">
            <div class="main-body">
            <br>

                  <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                      <li class="breadcrumb-item"><a href="javascript:void(0)">Listes des Personnels</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Profile Employer</li>
                    </ol>
                  </nav>
            
                    
                    <div class="col-md-12">
                      <div class="card mb-3">
                        <div class="card-body">
                
                          <div class="row">
                            <div class="col-sm-12">
                              <h6 class="mb-0 title">Prevision Conge</h6>
                            </div>
                          </div><br>
                                <div class="row">
                                    <div class="col-sm-2"><h6 class="mb-0">Matricule</h6></div>
                                    <div class="col-sm-4 text-secondary">Durree</div>
                                    <div class="col-sm-3 text-secondary">Direction</div>
                                    <div class="col-sm-3 text-secondary">Motif</div>
                                </div><hr>
                          @foreach (var demande in ViewBag.PrevisionConge)
                            {

                                <div class="row">
                                 <div class="col-sm-2 text-secondary">
                                        @demande.Matricule
                                    </div>
                                    <div class="col-sm-4 date-conge">
                                        <div class="mb-0">
                                            <p class="date-nb">@demande.DateDepart.ToString("dd")</p>
                                            <p>@demande.DateDepart.ToString("MMM")</p>
                                        </div>
                                        au
                                        <div class="mb-0">
                                            <p class="date-nb">@demande.DateRetour.ToString("dd")</p>
                                            <p>@demande.DateRetour.ToString("MMM")</p>
                                        </div>
                                    </div>

                                    <div class="col-sm-3 text-secondary">
                                        @demande.ID_Conge
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                        @demande.Motif
                                    </div>
                                </div><hr>
                            }

                        </div>
                      </div>
        

                </div>
            </div>
    </body>
</html>