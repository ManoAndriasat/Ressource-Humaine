
<!DOCTYPE html>
<html dir="ltr" lang="en-US">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <title>Document</title>
      
        <link rel="stylesheet" href="~/css/needs.css" />
        <link rel="stylesheet" href="~/css/Conge.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" type="text/css" media="all" href="~/css/daterange/daterangepicker.css" />
        <script src="~/css/daterange/daterangepicker.js"></script>
        <script src="~/css/daterange/moment.min.js"></script>
        <script type="text/javascript" src="~/js/jquery.js"></script>

    <style>
      .label-form{
        margin-bottom: 2px;
        margin-top: 10px;
        font-weight: bold;
        padding: 5px;
        background-color: rgb(167, 167, 167);
        color: white;
        border-radius: 5px;
      }
      .config-date{
        display: none;
      }
      .demo{
        margin:10px 0 ;
      }
      .motif{
        width: 1200px;
      }
      .date-submit{
        background-color: rgb(0, 157, 255);
        color: white;
        border: none;
      }
      .motif-conge{
        border: solid rgb(217, 217, 217) 1px; 
        height: 40px;
        border-radius: 3px;
        margin: 10px 0;
      }
    </style>
   </head>


<body>
    
@{
    var erreur = ViewBag.erreur as string; // Récupère la valeur de ViewBag.erreur
}

@if (!string.IsNullOrEmpty(erreur))
{
    <script>
        // Affiche une alerte JavaScript
        alert('@erreur');
    </script>
}


        <div class="row col-md-8 mx-auto date-form">
          <form action="/DemandeConge/Insert" method="post">
              <br>
              <p class="label-form col-md-12">Matricule</p>
              <div class="col-md-12 col-md-offset-2 demo">
                  <select name="Matricule" class="form-control">
                  @foreach(var Employer in ViewBag.allEmployer){

                      <option value="@Employer.Matricule">@Employer.FirstName @Employer.LastName</option>
                  }
                  </select>
              </div>
      
              <p class="label-form col-md-12">Motif de Congé</p>
              <div class="col-md-12">
                  <input type="text" name="Motif" class="col-md-6 motif-conge">
                  <select name="ID_TypeConge" class="col-md-5 motif-conge" style="margin-left: 65px;">
                    <option value="1">Affaire Familiale</option>
                    <option value="2">Vacances</option>
                    <option value="3">Congé pour motif personnel</option>
                    <option value="4">Congé pour voyage</option>
                    <option value="5" selected>Maladie</option>
                    <option value="6">Congé de deuil</option>
                    <option value="7">Congé de maternité</option>
                    <option value="8">Congé de paternité</option>
                  </select>
              </div>
      
              <p class="label-form col-md-12">Date de Départ</p>
              <div class="col-md-12 col-md-offset-2 demo">
                  <input type="date" name="DateD" id="config-demo" class="form-control">
              </div>

               <p class="label-form col-md-12">Date de Retour</p>
              <div class="col-md-12 col-md-offset-2 demo">
                  <input type="date" name="DateR" id="config-demo" class="form-control">
              </div>
      
              <div class="col-md-12 col-md-offset-2 demo">
                  <input type="submit" class="form-control date-submit">
              </div>
          </form>
      </div>
      


   </body>
</html>
